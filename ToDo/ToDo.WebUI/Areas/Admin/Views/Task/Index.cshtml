@model List<TaskListViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@{ if (Model.Count != 0)
    {
        <a asp-action="AddTask" class="btn btn-info btn-sm p-2 m-2"  > Add new Task</a>
        <table class="table table-sm table-hover" >
            <tr>
                <th> Id </th>
                <th> Name </th>
                <th> Description </th>
                <th> Status </th>
                <th> Priortiy</th>
                <th> Process</th>
            </tr>

            @{ foreach (var item in Model)
                {
                    <tr>
                        <td> @item.Id </td>
                        <td> @item.Name </td>
                        <td> @item.Description </td>
                        <td> @item.Status </td>
                        <td> @item.PriorityId </td>
                        <td>
                            <a class="btn btn-warning btn-sm"> Update </a>
                            <a class="btn btn-warning btn-sm"> Delete </a>
                        </td>
                    </tr>

                }}


        </table>
    }
    else
    {
        <div class="text-center p-3 mt-3 lead">
            <p> No Task Record </p>
            <a asp-action="AddTask" class="btn btn-info btn-sm"> Add new Task</a>
        </div> }
}