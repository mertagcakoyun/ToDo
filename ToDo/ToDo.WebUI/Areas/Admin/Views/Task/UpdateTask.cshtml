@model TaskUpdateViewModel
@{
    ViewData["Title"] = "UpdateTask";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="UpdateTask" class="w-75 mx-auto p-3" method="post">
    <input type="hidden"  asp-for="@Model.Id" />
    <div class="form-group">
        <label>Name</label>
        <span asp-validation-for="@Model.Name" class="text-danger"> </span>
        <input asp-for="@Model.Name" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <span asp-validation-for="@Model.Description" class="text-danger"> </span>
        <textarea asp-for="@Model.Description" type="text" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Choose priority status</label>
        <span asp-validation-for="@Model.PriorityId" class="text-danger"> </span>
        <select asp-for="@Model.PriorityId" class="form-control" asp-items="ViewBag.Tasks">
            <option hidden disabled value="-1">Choose</option>
        </select>
    </div>


    <button type="submit" class="btn btn-info btn-sm">Save</button>
</form>
@section JavaScript{
    <script src="~/lib/jqueyValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}


